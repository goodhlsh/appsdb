                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.Expertise)：
                        </th>
                        <td colspan="5">
                            @Html.TextAreaFor(model => model.Expertise, new { style = "width:350px;height:50px;" })
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.Attach)：
                        </th>
                        <td colspan="5">
